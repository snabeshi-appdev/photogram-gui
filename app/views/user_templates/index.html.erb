<h1>List of users</h1>

<form action = "/users">
  <label for = "username">Username</label>
  <input id = "username" type = "text" placeholder = "Enter a username..." name = "xx"></input>
  <button>Add user</button>
</form>

<hr>

<table border="1">
  <tr>
    <th>ID</th>
    <th>Username</th>
    <th> </th>
  </tr>

  <% @list_of_all_users.each do |a_user| %>
  <tr>
    <td><%= a_user.id%></td>
    <td><%= a_user.username%></td>
    <td><a href="/">Show details</a></td>
  </tr>
  <% end %>

</table>
